{
  "name": "solana-attestation-demo-ts",
  "version": "1.0.0",
  "description": "demonstration of solana attestation flow",
  "scripts": {
    "gill:standard": "ts-node src/gill/sas-standard-gill-demo.ts",
    "gill:tokenized": "ts-node src/gill/sas-tokenized-gill-demo.ts",
    "gill:compressed": "ts-node src/gill/sas-compressed-gill-demo.ts",
    "kit:standard": "ts-node src/kit/sas-standard-kit-demo.ts",
    "kit:tokenized": "ts-node src/kit/sas-tokenized-kit-demo.ts",
    "kit:compressed": "ts-node src/kit/sas-compressed-kit-demo.ts",
    "gill:standard:local": "LOCAL=true ts-node src/gill/sas-standard-gill-demo.ts",
    "gill:tokenized:local": "LOCAL=true ts-node src/gill/sas-tokenized-gill-demo.ts",
    "gill:compressed:local": "LOCAL=true ts-node src/gill/sas-compressed-gill-demo.ts",
    "kit:standard:local": "LOCAL=true ts-node src/kit/sas-standard-kit-demo.ts",
    "kit:tokenized:local": "LOCAL=true ts-node src/kit/sas-tokenized-kit-demo.ts",
    "kit:compressed:local": "LOCAL=true ts-node src/kit/sas-compressed-kit-demo.ts",
    "dump": "mkdir -p programs && solana program dump -um 22zoJMtdu4tQc2PzL74ZUT7FrwgB1Udec8DdW4yw4BdG programs/sas.so",
    "start-local": "solana-test-validator -r --bpf-program 22zoJMtdu4tQc2PzL74ZUT7FrwgB1Udec8DdW4yw4BdG programs/sas.so",
    "build": "tsc"
  },
  "packageManager": "pnpm@10.12.3",
  "dependencies": {
    "@lightprotocol/stateless.js": "0.22.1-alpha.1",
    "@solana-program/compute-budget": "^0.8.0",
    "@solana-program/token-2022": "^0.4.2",
    "@solana/kit": "^2.3.0",
    "@solana/web3.js": "^1.95.8",
    "gill": "^0.10.2",
    "sas-lib": "link:../../../clients/typescript"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
